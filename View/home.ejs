<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partical/head') %>
        <title>HomePage</title>
</head>

<body>
    <%- include('./partical/nav') %>
        <div class="container mt-3 mb-3 mr-3 ml-3 row row-cols-3">
            <% blogs.forEach(blog=> { %>
                <div class="col">
                    <div class="card col " style="width: 18rem;">
                    <img src="<%= blog.coverImage %>" width="300px" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>

                        <a href='/blog/<%= blog._id %>' class="btn btn-primary">View</a>
                    </div>
                </div>
                </div>

                <% }) %>

        </div>

    <%- include('./partical/script') %>
</body>

</html>